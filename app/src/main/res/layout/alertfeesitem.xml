<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/alertToatalfees"
            android:background="@drawable/edit_background"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="number"
            android:lines="1"
            android:layout_margin="20dp"
            android:drawablePadding="10dp"
            android:hint="Enter Toatal fees"
            android:paddingLeft="10dp" />
        <EditText
            android:id="@+id/alertPaidfees"
            android:background="@drawable/edit_background"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:lines="1"
            android:drawablePadding="10dp"
            android:hint="Paid fees"
            android:paddingLeft="10dp" />
        <EditText
            android:id="@+id/alertScholarshipfees"
            android:background="@drawable/edit_background"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="50dp"
            android:inputType="text"
            android:lines="1"
            android:drawablePadding="10dp"
            android:hint="Scholarship"
            android:paddingLeft="10dp" />
        <EditText
            android:id="@+id/alertCategoryfees"
            android:background="@drawable/edit_background"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="50dp"
            android:inputType="text"
            android:lines="1"
            android:drawablePadding="10dp"
            android:hint="Categories"
            android:paddingLeft="10dp" />

        <Button
            android:id="@+id/btnsubmitfees"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="Submit" />


    </LinearLayout>
</ScrollView>